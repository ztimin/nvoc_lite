#!/bin/bash
## Set your defaults ##################

USERNAME="miningisfun"
WORKERNAME="86753099"
MINER_ADDRESS="$USERNAME"."$WORKERNAME"
MINER_ALGO="$ALGO"
PASSWORD="password"

if [ -z $PASSWORD_OVERRIDE ]
then
 PASSWORD=$PASSWORD_OVERRIDE
fi

#######################################

MINER_PWD="$PASSWORD"

## Pool ports #########################

case $COIN in
